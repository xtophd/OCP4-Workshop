workshopuser_username: "cloud-user"
workshopuser_password: "{{ t_workshop_user_pw }}"

{% if t_virthost_type == "libvirt" %}

libvirt_credentials:
  default:
    username: "root"
    password: "{{ t_virthost_pw }}"

{% elif t_virthost_type == "ovirt" %}

ovirt_credentials:
  default:
    username: "admin@internal"
    password: "{{ t_ovirt_manager_pw }}"

{% endif %}


host_credentials:

{% if t_virthost_pw|length %}
  {{ t_virthost_fqdn }}:
    username: "{{ t_virthost_uid }}"
    password: "{{ t_virthost_pw }}"
{% endif %}

{% if t_ovirt_manager_pw|length %}
  {{ t_ovirt_manager_fqdn }}:
    username: "{{ t_ovirt_manager_uid }}"
    password: "{{ t_ovirt_manager_pw }}"
{% endif %}

{% if t_pw_bastion|length %}
  {{ t_name_bastion }}:
    username: "{{ t_uid_bastion }}"
