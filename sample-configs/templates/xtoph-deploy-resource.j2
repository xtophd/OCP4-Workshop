##
## RESOURCE PROFILES
##

custom_bastion:
    name: "custom openshift bastion"
    description: "Custom Bastion Utility Server"
    vcpus:    4

{% if   t_virthost_br_type == "nat" %}
    ## Libvirt NAT deployment of bastion enables desktop GUI and VNC
    ## Therefore memsize set to 16G 
    memsize:  16000
{% else %}
    ## Normal bastion deployment does NOT enable desktop GUI and VNC
    ## Therefore memsize reduced to 10G 
    memsize:  10000
{% endif %}

    storage:
      root:
        size: 50 
        hw_storage_profile: default

custom_bootstrap:
    name: "Custom Openshift Bootstrap"
    description: "Custom Openshift Bootstrap [6cpu,20GB,120GB disk]"
    vcpus:    6
    memsize:  20000
    storage:
      root:
        size: 120 
        hw_storage_profile: default

